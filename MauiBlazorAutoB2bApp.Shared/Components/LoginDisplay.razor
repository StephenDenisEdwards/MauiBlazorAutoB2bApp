@using MauiBlazorAutoB2bApp.Shared.Services
@inject IAuthService AuthService
@inject NavigationManager Nav

@code {
    private bool _isAuthenticated;

    protected override async Task OnInitializedAsync()
    {
        _isAuthenticated = (await MSALClientHelper.PCA.GetAccountsAsync()).Any();
    }

    private async Task HandleSignUp()
    {
        if (await AuthService.SignUpAsync())
        {
            _isAuthenticated = true;
            Nav.NavigateTo("/", true);
        }
    }

    private async Task HandleSignIn()
    {
        if (await AuthService.SignInAsync())
        {
            _isAuthenticated = true;
            Nav.NavigateTo("/", true);
        }
    }

    private async Task HandleSignOut()
    {
        await AuthService.SignOutAsync();
        _isAuthenticated = false;
        Nav.NavigateTo("/", true);
    }
}
@if (!_isAuthenticated)
{
    <button class="btn btn-success me-2" @onclick="HandleSignUp">Sign up</button>
    <button class="btn btn-primary"    @onclick="HandleSignIn">Sign in</button>
}
else
{
    <button class="btn btn-secondary"  @onclick="HandleSignOut">Sign out</button>
}

